<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:padding="24dp"
            android:background="@drawable/coffee_header_bg"
            android:elevation="4dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_coffee_admin"
                android:layout_marginBottom="16dp"
                android:contentDescription="Coffee Admin Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Admin!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Companion Admin"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- User Management Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUserManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_coffee_users"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Users Icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Management"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage all users, block/unblock accounts"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coffee_arrow"
                    android:contentDescription="Arrow"
                    app:tint="@color/coffee_dark_brown" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Manage Orders Card (NEW) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardManageOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="ðŸ“¦"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Orders"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track and update order status"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="â†’"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/coffee_dark_brown" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Payments Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cash"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Payments icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all payment proofs"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coffee_arrow" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Add COD Payment Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddCodPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E9"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add_payment"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Add COD Payment icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add COD Payment"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manually record Cash on Delivery payments"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coffee_arrow" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Stats Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Stats"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_dark_brown"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/coffee_light_brown">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Users"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_dark_brown"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTotalUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/coffee_cream">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Users"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_dark_brown"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvActiveUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Payment Statistics Section (All Time) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Time Revenue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_dark_brown"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- GCash Payments Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gcash"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="GCash icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total GCash Payments"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTotalGcashPayments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- COD Payments Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cash"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="COD icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total COD Payments"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_medium_brown"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTotalCodPayments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#EF6C00" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Overall Total Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#C8E6C9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_total_revenue"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Total revenue icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Total Revenue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOverallTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bar Chart Section with Date Range Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue Chart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_dark_brown"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date Range Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date Range"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_dark_brown"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Start Date"
                        android:textSize="12sp"
                        android:backgroundTint="@color/coffee_light_brown"
                        android:textColor="@color/coffee_dark_brown"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btnEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="End Date"
                        android:textSize="12sp"
                        android:backgroundTint="@color/coffee_light_brown"
                        android:textColor="@color/coffee_dark_brown"
                        android:padding="12dp" />

                </LinearLayout>

                <!-- Current Date Range Display -->
                <TextView
                    android:id="@+id/tvDateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Range"
                    android:textSize="14sp"
                    android:textColor="@color/coffee_medium_brown"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Bar Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="16dp" />

                <!-- Chart Totals Section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chart Period Totals"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_dark_brown"
                    android:layout_marginBottom="12dp" />

                <!-- Chart GCash Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="#E3F2FD">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GCash Total:"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:id="@+id/tvChartGcashTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0" />

                </LinearLayout>

                <!-- Chart COD Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:background="#FFF3E0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="COD Total:"
                        android:textSize="14sp"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:id="@+id/tvChartCodTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#EF6C00" />

                </LinearLayout>

                <!-- Chart Overall Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#C8E6C9">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Period Total:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/coffee_dark_brown" />

                    <TextView
                        android:id="@+id/tvChartOverallTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_coffee_logout"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/coffee_dark_brown"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>